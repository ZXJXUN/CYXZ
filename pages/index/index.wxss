/* 页面整体样式 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  /* background-color: #f4f4f5; */
  min-height: 100vh;
}

.logo {
  width: 100%; /* 宽度撑满父容器 */
  object-fit: contain; /* 不变形，保持图片比例 */
  margin-bottom: 70rpx; /* logo下方间距 */
}
.backgroud{
  width: 100vw;
  position: fixed;
  top: 0;
  left: 0;
  z-index: -1;
}

.grid {
  margin-top: 550rpx; /* logo下方间距 */
  display: grid;
  grid-template-columns: repeat(2, 300rpx);
  gap: 50rpx;
  width: 100%;
  justify-content: center;
  opacity: 0.8;
}

