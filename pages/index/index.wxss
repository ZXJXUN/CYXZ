.grid-item-image {
  height: 100%;
  border-radius: 15rpx;
}
.grid-item {
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  font-size: 40rpx;
  font-weight: bold;
  height: 180rpx;
  text-align: center;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  margin-bottom: 20rpx;
}

.grid-item:hover {
  transform: scale(1.05);
  box-shadow: 0px 4rpx 20rpx rgba(0, 0, 0, 0.2);
}
