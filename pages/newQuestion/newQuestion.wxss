.question-picture{
  width: 80px;
  height: 80px;
  margin: 5px;
}
.question-pictures{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.delete-button{
  line-height: 20px;
  font-size: 25px;
  position: absolute;
  right: 5px;
  top: 0;
  z-index: 10;
  background-color: white;
}
.picture-container{
  position: relative;
}
.add-button{
  text-align: center;
  line-height: 80px;
  margin:5px;
  width: 80px;
  height: 80px;
  font-size: 70px;
  border: black 1px solid;
}
.submit-buttons{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}
.submit-buttons .button{
  margin: 5px;
}