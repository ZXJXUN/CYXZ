.password-toggle {
  width: 35px;
  height: 35px;
}

.login-button {
  background-color: #007aff;
  color: #ffffff;
  padding: 12rpx 24rpx;
  border-radius: 6rpx;
  text-align: center;
  width: 291rpx;
  font-size: 36rpx;
  margin-top: 30rpx;
  z-index: 1;
  /* Ensure this is above the background */
}

.register-link {
  margin-top: 10px;
  z-index: 1;
  /* Ensure this is above the background */
}

.register-link text {
  color: #007aff;
  text-decoration: underline;
}

.Contact-link {
  margin-top: 10px;
  z-index: 1;
  /* Ensure this is above the background */
}

.Contact-link text {
  color: #007aff;
  text-decoration: underline;
}


