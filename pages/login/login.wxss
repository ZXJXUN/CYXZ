/* 按钮组的间距 */
button + button {
  margin-top: 20px; /* 按钮之间的间距 */
}

.welcome-section {
  margin-top: 20px; /* 上方间距 */
  text-align: center; /* 文本居中 */
}

.welcome-text {
  font-size: 18px; /* 字体大小 */
  color: #333; /* 文本颜色 */
  margin-bottom: 10px; /* 下方间隔 */
}

.avatar-image {
  width: 100px; 
  height: 100px; 
  border-radius: 50%; /* 圆形头像 */
  margin: 10px 0; /* 上下间距 */
}

/* 为其他部分添加统一的间隔 */
.section {
  margin-bottom: 20px; /* 各部分之间的间隔 */
}

.verification-section {
  display: flex;
  align-items: center; /* 垂直居中对齐 */
  margin: 10px 0;
}

.verification-input {
  flex: 1; /* 让输入框占据剩余空间 */
  min-width: 200px; /* 设置最小宽度 */
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px 0 0 5px; /* 圆角处理 */
}

.send-code-button {
