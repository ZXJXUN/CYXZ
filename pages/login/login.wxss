.login-header {
  margin-bottom: 30px;
  z-index: 1; /* Ensure this is above the background */
}

.header-title {
  font-size: 24px;
  font-weight: bold;
  color: #007aff;
}

.input-group {
  background-color: rgba(255, 255, 255, 0.308);
  display: flex;
  flex-direction: column;
  margin-bottom: 20px;
  z-index: 1; /* Ensure this is above the background */
  border: hsl(0, 19%, 74%) solid 2px;
  border-radius: 12px;
}

.input-item {
  padding-right: 5px;
  position: relative;
  border-bottom: hsl(0, 19%, 74%) solid 2px;
  display: flex;
  align-items: center;
}
.input-item input{
  border-left: hsl(0, 19%, 74%) solid 2px;
  padding-left: 10px;
  height: 100%;
  line-height: 100%;
}
.input-item:last-child{
  border-bottom:none
}
.input-icon{
  height: 50px;
  width: 50px;
}
