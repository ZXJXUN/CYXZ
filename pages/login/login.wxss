.login-header {
  margin-bottom: 30px;
  z-index: 1;
  /* Ensure this is above the background */
}

.header-title {
  font-size: 24px;
  font-weight: bold;
  color: #007aff;
}

.input-group {
  display: flex;
  flex-direction: column;
  margin-bottom: 20px;
}


.input-item {
  margin-bottom: 10px;
  width:80vw;
  height: 40px;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.input-item-left input{
  padding:   0 10px ;
  height: 100%;
  line-height: 100%;
}
.input-item-left{
  flex: 1;
}
.input-item-right{
  margin-left: 10px;
}
.input-item-left,.input-item-right{
  height: 100%;
  background-color: rgba(255, 255, 255, 0.5);
  border-radius: 7px;
}

.input-icon {
  height: 50px;
  width: 50px;
}

