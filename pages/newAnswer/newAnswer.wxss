.container {
  height: 1500rpx;
  padding: 0;
  width: 100%;
  font-size: 14rpx;
  background: #f0f4f3;
  color: #000;
  display: flex;
  flex-direction: column;
  justify-self: flex-start;
  align-items: stretch;
}
.navbor {
  display: flex;
  width: 100%;
  height: 75rpx;
  background: #fff;
  align-items: center;
  border: 3rpx solid #a7a3a3;
  border-radius: 20rpx;
  flex-direction: row;
  justify-content: space-between;
}

.back {
  width: 120rpx;
  height: 75rpx;
  font-size: 33rpx;
  color: #0f1010c5;
  margin-left: 25rpx;
  margin-top: 25rpx;
}
.push {
  width: 140rpx;
  height: 75rpx;
  font-size: 33rpx;
  color: #0f6be4c5;
  margin-top: 25rpx;
  margin-right: 25rpx;
}
.question_tlitle {
  display: flex;
  width: 100%;
  height: 120rpx;
  background: #fff;
  align-items: center;
  box-sizing: border-box;
  flex-direction: row;
  border-bottom: 1rpx solid #ccc;
  font-size: 40rpx;
  border-bottom: 1rpx solid #697171;
  text-align: center;
  line-height: 100rpx;
}

