.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
  position: fixed;  /* 添加这行 */
  width: 100%;     /* 添加这行 */
}

.header {
  background-color: #007bff;
  display: flex;
  align-items: center;
  padding: 40rpx;
  justify-content: center;
}

.title {
  font-size: 40rpx;
  color: white;
  font-weight: bold;
}

.rules {
  flex: 1;
  padding: 30rpx;
  padding-right: 60rpx;
  height: calc(100vh - 120rpx); /* 添加这行，120rpx是header的高度 */
  /* 确保内容超出时可以滚动 */
  overflow-y: auto;
  /* 增加弹性滚动效果 */
  -webkit-overflow-scrolling: touch;
  /* 防止内容溢出 */
  box-sizing: border-box;
}

.rule-item {
  display: flex;
  flex-direction: column;
  margin-bottom: 30rpx;
  padding: 30rpx;
  background-color: white;
  border-radius: 5rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.rule-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #007bff;
  margin-bottom: 16rpx;
}

.rule-content {
  font-size: 32rpx;
  color: #333;
  line-height: 1.8;
  margin-left: 20rpx;
}

.thanks-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  margin-top: 40rpx;
  background-color: #eaf4ff;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.thanks-title {
  font-size: 38rpx;
  font-weight: bold;
  color: #0056b3;
  margin-bottom: 20rpx;
  text-align: center;
}

.thanks-content {
  font-size: 34rpx;
  color: #333;
  line-height: 1.8;
  text-align: center;
}

.thanks-footer {
  font-size: 30rpx;
  color: #555;
  margin-top: 20rpx;
  font-style: italic;
}
