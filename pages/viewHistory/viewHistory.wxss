/* pages/viewHistory/viewHistory.wxss */
.container {
  padding: 20rpx;
}

.history-item {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.history-title {
  font-weight: bold;
  margin-bottom: 10rpx;
}

.history-content {
  color: #666;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.history-info {
  color: #999;
  font-size: 24rpx;
}

.loading,
.no-more {
  text-align: center;
  padding: 20rpx;
  color: #999;
}
