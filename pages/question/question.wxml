<!--question.wxml-->
<scroll-view
  scroll-y="true"
  class="container"
  bindscrolltoupper="upper"
  upper-threshold="10"
  lower-threshold="5"
  bindscrolltolower="lower"
  scroll-into-view="{{ toView }}"
  scroll-top="{{ scrollTop }}"
>
  <view class="floating-button" bindtap="publishAnswer">+</view>

  <view class="question-wrp">
    <view class="question-item">
      <view class="que-tag">
        <block
          wx:for="{{ question.tags }}"
          wx:for-index="idx"
          wx:for-item="item"
          data-item="{{ item }}"
        >
          <text class="tag">{{ item }}</text>
        </block>
      </view>

      <view class="que-title"> {{ question.title }} </view>
      <view class="que-content">{{ question.content }} </view>
      <view class="que-follow">
        <view class="left">
          <view class="watch">
            <image src="../../images/eye.png"></image>
            <text>{{ question.view_num }}</text>
          </view>
          <view class="comment">
            <image src="../../images/comment2.png"></image>
            <text>{{ question.answer_num }}</text>
          </view>
        </view>
        <view class="right" bindtap="followQuestion">{{
          follow ? "已关注" : "关注问题"
        }}</view>
      </view>
    </view>
    <view class="que-operate flex-wrp">
      <view class="invite flex-item" bindtap="to_ask_answer">
        <image src="../../images/invite.png"></image>
        <text>邀请回答</text>
      </view>
      <view class="write flex-item" bindtap="to_write_answer">
        <image src="../../images/write.png"></image>
        <text>写回答</text>
      </view>
    </view>
  </view>
  <view class="answer-feed">
    <block
      wx:for="{{ answerList }}"
      wx:for-index="idx"
      wx:for-item="item"
      data-idx="{{ idx }}"
    >
      <view bindtap="bindItemTap" class="feed-item">
        <view class="feed-source">
          <a class="" bindTap="">
            <view class="avatar">
              <image src="{{ item.answer_image_path }}"></image>
            </view>
            <text>{{ item.answer_name }}</text>
          </a>
        </view>
        <view class="feed-content">
          <view class="answer-body">
            <view>
              <text class="answer-txt">{{ item.answer_content }} </text>
            </view>

            <view class="answer-actions">
              <view class="like dot">
                <a>{{ item.like_num }}赞同 </a>
              </view>
              <view class="comments dot">
                <a>{{ item.comment_num }} 评论 </a>
              </view>
              <view class="time">
                <a>{{ item.time }}</a>
              </view>
            </view>
          </view>
        </view>
      </view>
    </block>
  </view>
</scroll-view>
