/* pages/question/question.wxss */
/**answer.wxss**/

/* 定义全局变量，统一设计语言 */
page {
  --primary-color: #3a7bd5;
  --primary-light: #e8f0fd;
  --primary-dark: #2c5fa8;
  --background-color: #f5f7fa;
  --card-color: #ffffff;
  --text-primary: #333333;
  --text-secondary: #666666;
  --text-hint: #999999;
  --border-radius-sm: 8rpx;
  --border-radius-md: 16rpx;
  --border-radius-lg: 24rpx;
  --spacing-xs: 10rpx;
  --spacing-sm: 16rpx;
  --spacing-md: 24rpx;
  --spacing-lg: 32rpx;
  --spacing-xl: 48rpx;
  --font-size-xs: 24rpx;
  --font-size-sm: 28rpx;
  --font-size-md: 32rpx;
  --font-size-lg: 36rpx;
  --font-size-xl: 42rpx;
  --box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  --animation-duration: 0.3s;
  --danger-color: #ff4d4f;
}

.answer-feed {
  padding: 0;
  padding-bottom: 20rpx;
  font-size: 14rpx;
  background: var(--background-color);
  color: var(--text-primary);
}
.question-wrp {
  margin: var(--spacing-md) var(--spacing-md) 0;
  border-radius: var(--border-radius-lg);
  overflow: hidden;
  box-shadow: var(--box-shadow);
  background-color: var(--card-color);
}
.question-item {
  width: 100%;
  padding: var(--spacing-lg);
  box-sizing: border-box;
  background: var(--card-color);
}
.question-item .que-tag {
}
.question-item .que-tag .tag {
  height: 28rpx;
  padding: 15rpx 20rpx;
  border-radius: 28rpx;
  margin: 0 10rpx;
  background: #eef5f8;
  color: #2186e0;
  font-size: 28rpx;
  vertical-align: middle;
}
.que-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: var(--spacing-lg);
  padding-top: var(--spacing-md);
  border-top: 1rpx solid rgba(0,0,0,0.05);
}
.question-item .que-title {
  font-size: var(--font-size-xl);
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: var(--spacing-md);
  line-height: 1.4;
  text-align: left;
  padding: 20rpx 0;
}
.que-footer-store {
  height: 60rpx;
  width: 113rpx;
}
.que-footer-store-icon {
  width: 55rpx;
  height: 55rpx;
}
.question-item .que-content {
  font-size: var(--font-size-md);
  color: var(--text-secondary);
  line-height: 1.6;
  margin-bottom: var(--spacing-lg);
  letter-spacing: 1rpx;
  padding: 0;
}
.question-item .que-follow {
  margin: 20rpx;
  height: 68rpx;
}
.question-item .que-follow view {
  display: inline-block;
  margin: 0 40rpx 0 0;
}

.question-item .que-follow image {
  width: 50rpx;
  height: 50rpx;
  margin: 0 10rpx 0 0;
  vertical-align: middle;
}
.question-item .que-follow .left {
  float: left;
  padding: 10rpx 0;
}
.question-item .que-follow .left text {
  color: #afafaf;
  height: 50rpx;
  vertical-align: middle;
  padding: 18rpx 0;
  font-size: 24rpx;
}
.question-item .que-follow .right {
  float: right;
  padding: 20rpx 55rpx;
  color: #ffffff;
  background: #52c980;
  border-radius: 3px;
  font-size: 26rpx;
  margin: 0;
}
.que-operate {
  width: 750rpx;
  border-top: solid 1px #ebebeb;
  border-bottom: solid 1px #ebebeb;
  color: #889091;
  vertical-align: middle;
  background: #ffffff;
}
.que-operate .flex-item {
  padding: 20rpx 0;
  font-size: 26rpx;
}
.que-operate .invite {
  border-right: solid 2px #ebebeb;
}
.que-operate image {
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
  margin: 0 20rpx 0 0;
}

.container {
  height: auto;
  display: flex;
  overflow: visible;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background: var(--background-color);
  min-height: 100vh;
  padding-bottom: 120rpx;
}

.container.withtab {
  margin: 105rpx 0 0 0;
}
.flex-wrp {
  display: flex;
}
.flex-tab {
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: stretch;
}
.flex-item {
  flex-grow: 1;
  text-align: center;
}
.top-tab {
  width: 750rpx;
  height: 100rpx;
  background: #298de5;
  color: #8ccefd;
  font-size: 28rpx;
  line-height: 100rpx;
  box-shadow: 0 2px 2px #bebebe;
  margin: 0 0 8rpx 0;
  position: fixed;
  top: 0;
  z-index: 9999;
}
.toptab.active {
  color: #ffffff;
  border-bottom: solid 2px #ffffff;
}

.container .feed-item {
  width: 90%;
  padding: var(--spacing-md);
  margin: 20rpx auto;
  background: var(--card-color);
  border-radius: var(--border-radius-lg);
  box-shadow: var(--box-shadow);
  transition: transform 0.2s, box-shadow 0.2s;
}

.container .feed-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.container .feed-item .feed-source {
  width: 100%;
  left: 0;
  height: auto;
  display: flex;
  align-items: center;
  padding-bottom: var(--spacing-md);
  border-bottom: 1rpx solid rgba(0,0,0,0.05);
}

.container .feed-item .feed-source .avatar {
  position: relative;
  display: inline-block;
}

.container .feed-item .feed-source a {
  display: inline-block;
  height: 40rpx;
}

.container .feed-item .feed-source .avatar image {
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.container .feed-item .feed-source text {
  display: inline-block;
  height: 40rpx;
  line-height: 40rpx;
  vertical-align: middle;
  margin: 0 0 0 15rpx;
  color: var(--text-secondary);
  font-size: var(--font-size-md);
  font-weight: 500;
  width: auto;
}

.container .feed-item .feed-content {
  padding: var(--spacing-md) 0;
}

.answer-content {
  font-size: var(--font-size-md);
  color: var(--text-secondary);
  line-height: 1.6;
  height: auto;
  max-height: 144rpx;
  overflow: hidden;
  padding: 0 var(--spacing-xs);
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.answer-content text {
  font-size: var(--font-size-md);
  line-height: 1.6;
  letter-spacing: 1rpx;
}

.container .feed-item .feed-content .answer-body {
  padding: 0;
  font-size: var(--font-size-md);
  line-height: 1.6;
  color: var(--text-secondary);
}

.container .feed-item .feed-content .answer-actions {
  width: 100%;
  padding: var(--spacing-md) 0 0;
  color: var(--text-hint);
  display: flex;
}

.container .feed-item .feed-content .answer-actions view {
  display: inline-block;
  vertical-align: text-bottom;
  padding: 0 var(--spacing-md) 0 0;
  font-size: var(--font-size-xs);
}

.container .feed-item .feed-content .answer-actions .dot ::after {
  content: "•";
}

.floating-button {
  position: fixed;
  bottom: 120rpx;
  right: 40rpx;
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
  color: white;
  font-size: 60rpx;
  line-height: 96rpx;
  border-radius: 50%;
  text-align: center;
  box-shadow: 0 6rpx 20rpx rgba(58, 123, 213, 0.4);
  z-index: 999;
  transition: transform 0.2s, box-shadow 0.2s;
  padding: 0;
}

.floating-button:active {
  transform: scale(0.95);
  box-shadow: 0 3rpx 10rpx rgba(58, 123, 213, 0.3);
}

.show_icon {
  display: none;
}

.more1, .more2 {
  display: none;
}

.more-delete, .more-modify, .more-copy {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: var(--spacing-xs);
  border-radius: var(--border-radius-sm);
  width: 70rpx;
  height: 70rpx;
}

.more-delete:active, .more-modify:active, .more-copy:active {
  background-color: rgba(0,0,0,0.05);
}

.more-delete image, .more-modify image, .more-copy image {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 4rpx;
}

.more-delete {
  color: #ff4d4f;
}

.more-modify {
  color: var(--primary-color);
}

.more-copy {
  color: var(--text-secondary);
}

.feed-content-show {
  height: auto;
  overflow: visible;
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 100%;
  background-color: var(--card-color);
  padding: var(--spacing-md) 0;
}

.show-content-text {
  font-size: var(--font-size-md);
  color: var(--text-secondary);
  line-height: 1.6;
  margin-bottom: var(--spacing-md);
  margin-top: 0;
  padding: 0 var(--spacing-xs);
  display: block;
  -webkit-line-clamp: initial;
  letter-spacing: 1rpx;
}

.show-content-footer {
  width: 100%;
  display: flex;
  flex-direction: column;
  border-top: 1rpx solid rgba(0,0,0,0.05);
  padding-top: var(--spacing-md);
  margin-top: var(--spacing-md);
}

.show-content-footer-time {
  font-size: var(--font-size-xs);
  color: var(--text-hint);
  margin-bottom: var(--spacing-sm);
}

.show-content-footer-main-icon {
  width: 100%;
  height: 70rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.show-content-footer-write {
  flex: 1;
  height: 60rpx;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  padding: 0 var(--spacing-sm);
  margin-right: var(--spacing-md);
}

.show-content-footer-wirte-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: var(--spacing-xs);
}

.show-content-footer-write-input {
  flex: 1;
  height: 60rpx;
  font-size: var(--font-size-sm);
  width: auto;
}

.show-content-footer-like, .show-content-footer-comment, .show-content-footer-store {
  display: flex;
  align-items: center;
  margin-left: var(--spacing-md);
  height: 100%;
  width: auto;
}

.show-content-footer-like-icon, .show-content-footer-comment-icon, .show-content-footer-store-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 4rpx;
}

.show-content-noshow-container {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-top: var(--spacing-md);
}

.show-content-noshow {
  width: auto;
  padding: 8rpx 20rpx;
  background-color: var(--primary-light);
  border-radius: 30rpx;
  height: auto;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: row;
}

.show-content-noshow-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
}

.show-content-noshow-text {
  font-size: var(--font-size-xs);
  color: var(--primary-color);
}

.que-image-container {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-sm);
  margin-bottom: var(--spacing-md);
  padding-left: 0;
  padding-top: var(--spacing-md);
  padding-bottom: var(--spacing-md);
}
.que-image-item {
  width: 215rpx;
  height: 215rpx;
  border-radius: var(--border-radius-md);
  overflow: hidden;
  background-color: #f0f0f0;
}
.que-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}
.que-image-item:active .que-image {
  transform: scale(0.98);
}
/* 针对单张图片的特殊处理 */
.que-image-container.single-image .que-image-item {
  width: 450rpx;
  height: 300rpx;
}
.show-content-image {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-sm);
  margin-bottom: var(--spacing-md);
  padding-left: 0;
  padding-top: var(--spacing-md);
  padding-bottom: var(--spacing-md);
}
.show-content-image-item {
  width: 215rpx;
  height: 215rpx;
  border-radius: var(--border-radius-md);
  overflow: hidden;
  background-color: #f0f0f0;
}
.no_answer {
  width: 100%;
  padding: 80rpx 0;
  display: flex;
  flex-direction: column;
  background-color: var(--background-color);
  justify-content: center;
  align-items: center;
}

.no_answer_icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: var(--primary-light);
  color: var(--primary-color);
  font-size: 80rpx;
  font-weight: bold;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: var(--spacing-lg);
  box-shadow: 0 6rpx 16rpx rgba(58, 123, 213, 0.2);
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0% {
    transform: translateY(0px);
  }
  50% {
    transform: translateY(-10px);
  }
  100% {
    transform: translateY(0px);
  }
}

.no_answer_text {
  text-align: center;
  padding: var(--spacing-md);
  font-size: var(--font-size-lg);
  font-weight: 500;
  color: var(--text-secondary);
  margin-bottom: var(--spacing-sm);
}

.no_answer_tip {
  text-align: center;
  font-size: var(--font-size-sm);
  color: var(--text-hint);
  margin-bottom: var(--spacing-lg);
}

.answer-btn {
  background-color: var(--primary-color);
  color: #fff;
  font-size: var(--font-size-md);
  padding: 16rpx 60rpx;
  border-radius: 40rpx;
  box-shadow: 0 6rpx 16rpx rgba(58, 123, 213, 0.3);
  transition: all var(--animation-duration);
  margin-top: var(--spacing-md);
}

.answer-btn:active {
  transform: scale(0.96);
  opacity: 0.9;
  box-shadow: 0 3rpx 10rpx rgba(58, 123, 213, 0.2);
}

.less_answer {
  width: 100%;
  height: 400rpx;
  display: flex;
  flex-direction: column;
  background-color: var(--background-color);
  justify-content: center;
  align-items: center;
}

.less_answer_text {
  text-align: center;
  padding: var(--spacing-md);
  font-size: var(--font-size-md);
  color: var(--text-hint);
}

/* 优化footer和分页样式 */
.footer {
  width: 100%;
  padding: 30rpx 0 120rpx;
  background-color: var(--background-color);
  text-align: center;
}

/* 自定义分页样式 */
.pagination-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: var(--spacing-lg) 0;
}

.pagination-item {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--card-color);
  padding: 12rpx 24rpx;
  border-radius: 40rpx;
  margin: 0 16rpx;
  box-shadow: var(--box-shadow);
  min-width: 160rpx;
  transition: all var(--animation-duration);
}

.pagination-item text {
  font-size: var(--font-size-md);
  color: var(--primary-color);
  font-weight: 500;
}

.arrow-icon {
  font-size: 36rpx;
  margin: 0 8rpx;
  color: var(--primary-color);
  font-weight: bold;
}

.pagination-item.prev {
  padding-left: 20rpx;
}

.pagination-item.next {
  padding-right: 20rpx;
}

.pagination-item:active {
  transform: scale(0.96);
  opacity: 0.9;
}

.pagination-item.disabled {
  opacity: 0.5;
  pointer-events: none;
  background-color: #f5f5f5;
}

.pagination-info {
  background-color: var(--card-color);
  border-radius: 20rpx;
  padding: 8rpx 24rpx;
  margin: 0 20rpx;
  box-shadow: var(--box-shadow);
}

.current-page {
  color: var(--primary-color);
  font-size: var(--font-size-lg);
  font-weight: bold;
}

.page-separator {
  color: var(--text-hint);
  margin: 0 8rpx;
  font-size: var(--font-size-md);
}

.total-pages {
  color: var(--text-secondary);
  font-size: var(--font-size-md);
}

.que-footer-time {
  font-size: var(--font-size-xs);
  color: var(--text-hint);
}

.que-footer-like {
  display: flex;
  align-items: center;
  background-color: var(--primary-light);
  padding: 8rpx 16rpx;
  border-radius: 30rpx;
}

.que-footer-like-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 8rpx;
}

.like-num {
  font-size: var(--font-size-sm);
  color: var(--primary-color);
}

/* 新的操作菜单样式 */
.action-menu-wrapper {
  position: relative;
  margin-left: auto;
  z-index: 100;
}

.action-menu-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: var(--primary-light);
  transition: background-color var(--animation-duration);
  display: flex;
  justify-content: center;
  align-items: center;
}

.dot-container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 32rpx;
}

.dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background-color: var(--primary-color);
}

.action-menu-icon:active {
  background-color: rgba(0,0,0,0.05);
}

.dots {
  display: none;
}

.action-menu {
  position: absolute;
  top: 60rpx;
  right: 0;
  display: flex;
  flex-direction: column;
  background-color: var(--card-color);
  border-radius: var(--border-radius-md);
  box-shadow: var(--box-shadow);
  overflow: hidden;
  width: 180rpx;
  transform: scale(0.8);
  transform-origin: top right;
  opacity: 0;
  visibility: hidden;
  transition: transform var(--animation-duration), 
              opacity var(--animation-duration),
              visibility var(--animation-duration);
  z-index: 101;
}

.action-menu-show {
  transform: scale(1);
  opacity: 1;
  visibility: visible;
}

.action-menu-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: var(--spacing-md);
  transition: background-color 0.2s;
}

.action-menu-item:active {
  background-color: rgba(0,0,0,0.05);
}

.action-menu-item image {
  width: 36rpx;
  height: 36rpx;
  margin-right: var(--spacing-sm);
}

.action-menu-item text {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
}

.action-menu-item:first-child text {
  color: var(--danger-color);
}

.hidden {
  display: none;
}
