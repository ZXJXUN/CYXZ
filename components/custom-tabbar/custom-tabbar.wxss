.tabbar {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 50px;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: #0070f3;
  border-top: 1px solid white;
}

.tabbar-item {
  flex: 1;
  text-align: center;
  color: #ffffff;
  font-size: 14px;
}

.tabbar-item[data-current="true"] {
  color: #ffffff; /* 选中后的颜色 */
}
