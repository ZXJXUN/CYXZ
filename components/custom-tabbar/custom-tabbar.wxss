.tabbar {
  z-index: 999;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 56px;
  display: flex;
  align-items: center;
  background-color: #ffffff;
  box-shadow: 0 -1px 6px rgba(0, 0, 0, 0.1);
  border-top: 1px solid #f0f0f0;
}

.tabbar-item {
  height: 56px;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #888888;
  font-size: 12px;
  transition: all 0.2s;
}

.tabbar-icon {
  width: 24px;
  height: 24px;
  margin-bottom: 4px;
}

.tabbar-text {
  line-height: 1;
}

.tabbar-item.active {
  color: #0070f3;
}