.tabbar {
  width: 100%;
  height: 50px;
  display: flex;
  align-items: center;
  background-color: #0070f3;
}

.tabbar-item {
  height:  50px;
  line-height: 50px;
  flex: 1;
  text-align: center;
  color: #ffffff;
  font-size: 15px;
  border-right: #ffffff solid 1px;
}
.tabbar-item:last-child{
  border-right:none
}