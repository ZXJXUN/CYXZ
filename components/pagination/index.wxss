.wux-pagination {
  display: block;
  width: 100%;
  height: 70rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-sizing: border-box;
  position: relative;
}
.wux-pagination__prev {
  position: absolute;
  height: 30rpx;
  left: 30rpx;
  text-align: center;
  top: 0;
}
.wux-pagination__next {
  position: absolute;
  height: 30rpx;
  right: 30rpx;
  text-align: center;
  top: 0;
}
.wux-pagination__number {
  width: 100%;
  height: 75rpx;
  line-height: 35rpx;
  margin: 0 auto;
  text-align: center;
  font-size: 30rpx;
}
.wux-pagination__active {
  display: inline;
  color: #387ef5;
}
.wux-pagination__pointer {
  width: 100%;
  height: 75rpx;
  line-height: 35rpx;
  margin: 0 auto;
  text-align: center;
}
.wux-pagination__dot {
  width: 16rpx;
  height: 16rpx;
  display: inline-block;
  margin: 0 4rpx;
  border-radius: 50%;
  background: #ccc;
}
.wux-pagination__dot--active {
  background: #888;
}
.wux-pagination__button {
  display: inline-block;
  margin: 0;
}
